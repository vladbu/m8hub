doctype html  
html(lang="en")  
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=480, initial-scale=1.0")
    link(rel="stylesheet" href="./css/payment.css")
    title PDFfiller
  body
    h1 Thank you for choosing to subscribe to PDFfiller services!
    .container
      form(method="post")#card.card
        .type
          input(type="radio" name="type" id="visa" value="visa" required)
          label(for="visa").Visa-dark
          input(type="radio" name="type" id="masterCard" value="mastercard"  required)
          label(for="masterCard").MasterCard-dark
          input(type="radio" name="type" id="discover" value="discover"  required)
          label(for="discover").Discover-dark
          input(type="radio" name="type" id="americanExpr" value="american-express"  required)
          label(for="americanExpr").AmericanExpress-dark
        .name
          p Cardholder Name
          input(type="text" name="firstName" placeholder="First Name" required)
          input(type="text" name="lastName" placeholder="Last Name" required)
        .number
          p Card Number
          input(type="text" name="cardNumber" placeholder="⦁⦁⦁⦁⦁ ⦁⦁⦁⦁⦁ ⦁⦁⦁⦁⦁ ⦁⦁⦁⦁⦁" required)
        .expCvv
          .expDate
            p Exp. Date
            div 
              select(name="month" required)
                each month in ["01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"]
                  option(value=month)= month
              select(name="year" required)
                - var currentDate = new Date
                - var  year = currentDate.getFullYear()
                while year <= year + 19
                  option(value=year)= year
                  - year++
          .cvv
            p CVV/CVC
            .input
              input(type="text" name="cvv" placeholder="XXXX" required)
              button.showInfo(form="")
              div.cvvInfoContainer.hidden
                div.cvvInfo.hidden
                  div.borderRight
                    img(src="./img/visaMaster.svg" alt="")
                    h4 Visa, MasterCard
                    p 3-Digit Verification Number
                  div
                    img(src="./img/amExpr.svg" alt="")
                    h4 American Express
                    p 4-Digit Verification Number
        .zip
          p Zip/Postal Code
          input(type="text" name="zip" placeholder="01001" required)
      .paypal
        p Or pay with Paypal
        button
      button(type="submit" form="card").buy
        h2 Start My Subscription for $19.99/month
  script(src="./js/payment.js" defer)